<style>
.custom-navbar {
    background-color: #181e5c;
}

.custom-navbar .navbar-brand,
.custom-navbar .nav-link,
.custom-navbar .navbar-toggler-icon {
    color: #f0e630;
}
</style>
<%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.0/font/bootstrap-icons.css">
<nav class="navbar navbar-expand-lg custom-navbar">
  <div class="container-fluid">
    <!-- Navbar brand -->
    <a class="navbar-brand fw-bold" href="/">Gaucho Event System</a>

    <!-- Collapse button (for mobile view) -->
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    
    <!-- Links -->
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav ms-auto">
      <li class="nav-item d-flex align-items-center">
        <form class="d-flex position-relative" action="/users" method="post">
          <input class="form-control" type="search" placeholder="Search" name="search_term" aria-label="Search" id="navbarSearchInput">
          <button class="btn position-absolute top-0 end-0 h-100" type="submit" id="navbarSearchButton">
            <i class="bi bi-search"></i>
          </button>
        </form>
      </li>
        <% if !current_user.nil? %>
          <li class="nav-link">
          Welcome,
          </li>
          <li class="nav-item">
          <%= link_to current_user.username, current_user, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Logout', logout_path, data:{
              turbo_method: :delete,
              turbo_confirm: "Are you sure?"
          } , class: "nav-link" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to 'Login', '/login', class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to 'Register', register_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>



